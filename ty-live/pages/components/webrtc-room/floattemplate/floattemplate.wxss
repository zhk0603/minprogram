.float.videoview {
  background-repeat:no-repeat;
  background-size: cover;
  width: 100%;
  height: 100%;
  display: flex;
}

.float .pusher-box {
	position: relative; 
	overflow: hidden;
  width: 100%;
	height: 100%;
	text-align: center;
  vertical-align: top;
}

.float live-pusher {
  width: 100%;
	height: 100%; 
}

.float .player-box {
    position: absolute;
    display: flex;
    width: 30.65vw;
    height: 123.07vw + 6vw;
    right: 15px;
    bottom: 20vw;
    overflow: hidden;    
    flex-direction:column-reverse;
}

.float .player-box .player-item {
    position: relative;
    display: inline-block;
    width: 30.65vw;
    height: calc(123.07vw/3);
    margin-top: 2vw;
}

.float live-player {
  width: 100%;
	height: 100%; 
}

.float .character {
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 16px;
  color: #999;
  width: 100%;
  height: 10vw;
  line-height: 10vw;
  text-align: left;
}

.float .loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}

.float .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

